<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.akg.akg_sales.view.dialog.OrderItemQuantityDialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{vm.itemName}"
            android:textColor="@color/font_color_main"
            android:textSize="@dimen/text_size_2"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dialog_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Quantity"
                android:textSize="@dimen/text_size_1"
                android:textColor="@color/font_color_main"
                android:textStyle="bold"

                />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/quantity"
                android:inputType="number"
                android:textColor="@color/font_color_main"
                android:textSize="@dimen/text_size_1"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:background="@android:drawable/editbox_background"
                />

            <TextView
                android:id="@+id/uom_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.uom}"
                android:textSize="@dimen/text_size_1"
                android:textColor="@color/font_color_main"
                android:textStyle="bold"
                />

        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qty_ok_btn"
            android:text="Add to Cart"
            android:onClick="@{()->vm.onClickAddToCart()}"
            android:layout_margin="40dp"
            android:background="@drawable/blue_background"
            android:textSize="@dimen/text_size_1"
            android:textStyle="bold"/>
    </LinearLayout>
</layout>