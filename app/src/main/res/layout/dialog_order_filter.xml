<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.akg.akg_sales.view.dialog.OrderFilterDialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Filter"
            android:textAlignment="center"
            android:textColor="@color/font_color_main"
            android:textSize="@dimen/text_size_2"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/approval_switch_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/approval_switch_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toggle to see Additional Filters"/>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/approval_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awaiting My Approval Only       "
                android:textSize="18sp"
                android:checked="true"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Date From">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date_from"
                android:inputType="none"
                android:focusable="false"
                android:onClick="@{()->vm.onClickDateFrom()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Date To">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date_to"
                android:inputType="none"
                android:focusable="false"
                android:onClick="@{()->vm.onClickDateTo()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Sort Orders">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/sort_dir_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                tools:ignore="KeyboardInaccessibleWidget" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/additional_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Order Status">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/status_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    tools:ignore="KeyboardInaccessibleWidget" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_dropdown_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Customer">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/customer_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    tools:ignore="KeyboardInaccessibleWidget" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_number_container"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Customer Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_number"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Order Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/order_number"
                    android:digits="0123456789."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apply_btn"
            android:background="@drawable/blue_background"
            android:text="Apply Filter"
            android:onClick="@{()->vm.onClickApplyFilter()}"
            android:layout_margin="40dp"
            android:textSize="@dimen/text_size_1"
            android:textStyle="bold"/>
    </LinearLayout>
</layout>