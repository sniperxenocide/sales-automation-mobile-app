<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.akg.akg_sales.dto.delivery.MoveOrderConfirmedHeaderDto" />
        <variable
            name="index"
            type="String" />
        <variable
            name="canView"
            type="Boolean" />
    </data>
    <LinearLayout
        android:id="@+id/delivery_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/light_grey_background"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_main"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint="1."
                android:text="@{index+`.`}"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingStart="1sp"
            android:paddingEnd="10sp"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="16sp"
                    android:text="MO:"
                    android:textStyle="bold"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.movOrderNo}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="16sp"
                    android:layout_weight="7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="16sp"
                    android:text="Load:"
                    android:textStyle="bold"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.moveConfirmedDate}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="16sp"
                    android:layout_weight="7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="16sp"
                    android:text="Gateout:"
                    android:textStyle="bold"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.gateOutDate}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="16sp"
                    android:layout_weight="7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{canView?View.VISIBLE:View.GONE}"
                android:gravity="end">
                <TextView
                    android:id="@+id/fr_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_white"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/deep_green_background"
                    android:text="@{`FR: `+vm.numberOfFullReceived}"
                    android:visibility="@{vm.numberOfFullReceived>0?View.VISIBLE:View.GONE}"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/pr_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_white"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/yellow_background"
                    android:text="@{`PR: `+(vm.numberOfReceiving-vm.numberOfFullReceived)}"
                    android:visibility="@{vm.numberOfReceiving-vm.numberOfFullReceived>0?View.VISIBLE:View.GONE}"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/nr_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_white"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/red_background"
                    android:text="@{`NR: `+(vm.numberOfCustomers-vm.numberOfReceiving)}"
                    android:visibility="@{vm.numberOfCustomers-vm.numberOfReceiving>0?View.VISIBLE:View.GONE}"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Vehicle:"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@{vm.vehicleNo}"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:text="Driver:"
                    android:textStyle="bold"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.driverName+` `+vm.driverMobile}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:layout_weight="6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>