<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.akg.akg_sales.dto.delivery.MoveOrderConfirmedHeaderDto" />
        <variable
            name="index"
            type="String" />
    </data>
    <LinearLayout
        android:id="@+id/delivery_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/light_grey_background"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_main"
                android:textSize="@dimen/text_size_1"
                android:textStyle="bold"
                android:text="@{index+`.`}"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingStart="1sp"
            android:paddingEnd="10sp"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:text="Load:"
                    android:textStyle="bold"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.moveConfirmedDate}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:layout_weight="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:text="Gateout:"
                    android:textStyle="bold"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="--"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:layout_weight="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Vehicle:"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@{vm.vehicleNo}"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:text="Driver:"
                    android:textStyle="bold"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.driverName+` `+vm.driverMobile}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:layout_weight="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:text="Move No:"
                    android:textStyle="bold"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="0dp"
                    android:text="@{vm.movOrderNo}"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:layout_weight="6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>