<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.akg.akg_sales.dto.delivery.DeliveryAcknowledgeLineDto" />

        <variable
            name="editable"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.doNumber}"
            android:hint="DO/CGOU/4089089"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:visibility="@{vm.isHeader ? View.VISIBLE : View.GONE}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/light_grey_background"
            android:visibility="@{vm.isHeader ? View.GONE : View.VISIBLE}">

            <LinearLayout
                android:id="@+id/card_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_main"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="@{vm.serial+`.`}"
                        android:hint="1."
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10sp"
                    android:paddingStart="1sp"
                    android:paddingEnd="10sp"
                    android:layout_weight="9"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_color_main"
                            android:paddingStart="1dp"
                            android:paddingEnd="5dp"
                            android:textSize="18sp"
                            android:text="@{vm.itemDescription}"
                            android:textStyle="italic"
                            android:hint="Marks FCMP 500gm"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5sp"
                    android:paddingBottom="10sp"
                    android:paddingStart="1sp"
                    android:paddingEnd="10sp"
                    android:layout_weight="9"
                    android:weightSum="10"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="4">
                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="textStart"
                            android:text="@{vm.lineQuantity+` `+vm.uomCode}"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_color_main"
                            android:textStyle="italic"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:hint="5 CTN"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="6"
                        android:weightSum="10">

                        <EditText
                            android:id="@+id/rcvQty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:textAlignment="center"
                            android:background="@{vm.lineQuantity==vm.receivedQuantity? @drawable/deep_green_background:@drawable/yellow_background }"
                            android:textColor="@color/font_color_main"
                            android:textStyle="italic"
                            android:padding="6dp"
                            android:enabled="@{editable}"
                            android:text="@{vm.receivedQuantity.toString()}"
                            android:layout_marginEnd="5sp"
                            android:textSize="18sp"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:text="@{vm.uomCode}"
                            android:textColor="@color/font_color_main"
                            android:textStyle="italic"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:hint="CTN"
                            />




                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</layout>