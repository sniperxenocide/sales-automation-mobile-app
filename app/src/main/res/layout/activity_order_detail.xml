<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.akg.akg_sales.dto.order.OrderDto" />
        <variable
            name="activity"
            type="com.akg.akg_sales.view.activity.order.OrderDetailActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Order Detail"
                android:textColor="@color/font_color_main"
                android:textSize="@dimen/text_size_2"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutBackBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/order_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Date:"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="@{vm.creationTime}"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:hint="data"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Order No:"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="@{vm.orderNumber}"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:hint="data"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Customer:"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="@{vm.customerName+` (`+vm.customerNumber+`)`}"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:hint="data"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Market:"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="@{vm.marketSegmentName}"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:hint="data"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="Status:"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="@{vm.currentStatus}"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:hint="data"/>
                        </LinearLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Lines:"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/font_color_main"
                            android:textSize="@dimen/text_size_1"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/order_lines_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Approximate Value:"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:hint="data"
                                android:textAlignment="textEnd"
                                android:text="@{vm.value.toString()+` Tk`}"
                                android:textColor="@color/font_color_main"
                                android:textSize="@dimen/text_size_1" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/order_action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <Button
                                android:id="@+id/order_approve"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Approve"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_1"
                                android:layout_margin="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:backgroundTint="@android:color/holo_green_dark"
                                android:layout_weight="1"/>
                            <Button
                                android:id="@+id/order_cancel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textSize="@dimen/text_size_1"
                                android:layout_margin="10dp"
                                android:backgroundTint="@android:color/holo_red_light"
                                android:layout_weight="1"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayoutBackBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <include
                layout="@layout/view_back_btn"
                app:activity="@{activity}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>