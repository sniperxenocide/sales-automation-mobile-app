<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.akg.akg_sales.dto.order.OrderLineDto" />
        <variable
            name="index"
            type="String" />
    </data>

    <LinearLayout
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:background="@drawable/light_grey_background"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_main"
                android:textSize="@dimen/text_size_1"
                android:textStyle="bold"
                android:text="@{index+`.`}"
                android:hint="1."
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingStart="1sp"
            android:paddingEnd="10sp"
            android:layout_weight="9"
            android:weightSum="10"
            android:gravity="center"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_main"
                    android:textSize="18sp"
                    android:paddingStart="1dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp"
                    android:text="@{vm.itemDescription}"
                    android:textStyle="italic"
                    android:hint="Marks FCMP 500gm"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="4">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/quantity"
                        android:inputType="none"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:background="@drawable/white_background"
                        android:layout_height="wrap_content"
                        android:text="@{vm.quantity.toString()}"
                        android:textColor="@color/font_color_main"
                        android:textStyle="italic"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:hint="5.0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:text="@{vm.uom}"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_main"
                        android:textStyle="italic"
                        android:padding="5dp"
                        android:hint="CTN" />

                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/delete_line_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/delete"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>