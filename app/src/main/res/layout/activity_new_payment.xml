<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.akg.akg_sales.view.activity.payment.NewPaymentActivity" />
        <variable
            name="vm"
            type="com.akg.akg_sales.viewmodel.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make Payment"
                android:textColor="@color/font_color_main"
                android:textSize="@dimen/text_size_2"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/main_background"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutBackBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <Button
                    android:id="@+id/account_selection_btn"
                    android:padding="15dp"
                    android:backgroundTint="#a5c9af"
                    android:textSize="@dimen/text_size_1"
                    android:textColor="@color/dark_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beneficiary Account"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:drawableTint="@color/font_color_red"
                    android:onClick="@{()->activity.showAccountSelectionDialog()}"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/acc_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColorHint="@color/dark_green"
                    android:hint="Beneficiary Account Info">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/acc_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:backgroundTint="#dbebd5"
                        android:textColor="@color/font_color_main"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Payment Amount"
                    android:textColorHint="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:backgroundTint="#dbebd5"
                        android:text="@={vm.paymentAmount}"
                        android:drawableEnd="@android:drawable/star_off"
                        android:drawableTint="@color/font_color_red"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Payment Method"
                    android:textColorHint="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:focusable="false"
                        android:onClick="@{()->activity.showPaymentMethodsDialog()}"
                        android:backgroundTint="#dbebd5"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:drawableTint="@color/font_color_red"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Payment Date"
                    android:textColorHint="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/payment_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:focusable="false"
                        android:onClick="@{()->activity.showPaymentDatePicker()}"
                        android:backgroundTint="#dbebd5"
                        android:drawableEnd="@android:drawable/star_off"
                        android:drawableTint="@color/font_color_red"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Attachment"
                    android:textColorHint="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/attachment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:focusable="false"
                        android:onClick="@{()->activity.onClickAttachment()}"
                        android:backgroundTint="#dbebd5"
                        android:drawableEnd="@android:drawable/ic_menu_report_image"
                        android:drawableTint="@color/font_color_red"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Receipt/Transaction No."
                    android:textColorHint="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:drawableTint="@color/font_color_red"
                        android:drawableEnd="@android:drawable/star_off"
                        android:backgroundTint="#dbebd5"
                        android:text="@={vm.receiptNumber}"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Customer Account Info:"
                    android:textColor="@color/font_color_main"
                    android:textSize="@dimen/text_size_1"
                    android:textStyle="bold"
                    />




                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Bank Name"
                    android:textColorHint="@color/dark_green"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cust_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:focusable="false"
                        android:backgroundTint="#dbebd5"
                        android:drawableTint="@color/font_color_red"
                        android:onClick="@{()->activity.showCustomerBankDialog()}"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Branch Name"
                    android:textColorHint="@color/dark_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:drawableTint="@color/font_color_red"
                        android:drawableEnd="@android:drawable/star_off"
                        android:backgroundTint="#dbebd5"
                        android:text="@={vm.customerBankBranch}"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Account Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={vm.customerAccountNumber}"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={vm.comment}"
                        android:textColor="@color/font_color_main"
                        android:textSize="@dimen/text_size_1" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/submit_btn"
                        android:layout_marginTop="10dp"
                        android:padding="15dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:textStyle="bold"
                        android:onClick="@{()->activity.onClickSubmit()}"
                        android:backgroundTint="#a5c9af"
                        android:textSize="@dimen/text_size_1"
                        android:textColor="@color/dark_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayoutBackBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <include
                layout="@layout/view_back_btn"
                app:activity="@{activity}" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>